{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "C++ WSL Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/exercise_code/24/tcpepoll",  // 替换为你的可执行文件路径
            "args": ["127.0.0.1", "8080"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // WSL 中的 gdb 路径
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build"  // 可选：调试前执行编译任务
        }
    ]
}